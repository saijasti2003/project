@startuml
!define C4Context
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title System Context Diagram

LAYOUT_WITH_LEGEND()

System(employer_worker_registration_system, "employer-worker-registration-system", "E-commerce microservices platform for online shopping")

Person(customer, "Customer", "A customer who wants to shop online and manage their cart")
Person(admin, "Administrator", "System administrator who manages inventory and users")

System_Ext(payment_system, "Payment Gateway", "External payment processing service")
System_Ext(email_service, "Email Service", "External email notification service")
System_Ext(analytics_service, "Analytics Service", "External analytics and monitoring service")

Rel(customer, employer_worker_registration_system, "Browse products, manage cart, place orders", "HTTPS/REST")
Rel(admin, employer_worker_registration_system, "Manage inventory, view reports, manage users", "HTTPS/REST")

Rel(employer_worker_registration_system, payment_system, "Process payments", "HTTPS/REST API")
Rel(employer_worker_registration_system, email_service, "Send order confirmations and notifications", "SMTP/REST API")
Rel(employer_worker_registration_system, analytics_service, "Send usage data and metrics", "HTTPS/REST API")

@enduml